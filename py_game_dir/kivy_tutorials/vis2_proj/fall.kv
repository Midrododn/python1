#:kivy 1.0.9

<PongGame>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: 0 , root.top - 50
            size: self.width, 50

        Color:
            rgb: 0, 0, 1
        Rectangle:
            pos: 0 , 0
            size: self.width, 10

        Color:
            rgb: 0.5 , 0.5 , 0
        Rectangle:
            pos: 0 , root.top - 150
            size: 100 , 100
        Rectangle:
            pos: root.width - 100, root.top - 150
            size:100 , 100

        Color:
            rgb: 1., 1., 1.
        Rectangle:
            pos: 0 , 10
            size: 100, 100
