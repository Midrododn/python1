#:kivy 1.0.9

<FallBall>:
    size: 20, 20 
    canvas:
        Color:
            rgb: 0, 1, 0
        Ellipse:
            pos: self.pos
            size: self.size          

<PongGame>:

    ball: fall_ball
    
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: self.width - 50 , 0
            size: 50, self.height

        Color:
            rgb: 0, 0, 1
        Rectangle:
            pos: 0 , 0
            size: 10 , self.height

        Color:
            rgb: 0.5 , 0.5 , 0
        Rectangle:
            pos: self.width - 150 , self.height - 100
            size: 100 , 100
        Rectangle:
            pos: self.width - 150, 0
            size:100 , 100
    
    FallBall:
        id: fall_ball
        center: self.parent.center